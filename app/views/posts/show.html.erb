<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>

<p>
  <strong>User:</strong>
  <%= @post.user.email %>
</p>

<%= link_to 'Back', posts_path, class: "btn btn-secondary" %>
<% if @post.user_id == current_user.id %>
  <%= link_to 'Edit', edit_post_path(@post), class: "btn btn-primary" %>
<% end %>
